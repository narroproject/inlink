{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "skipLibCheck": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "target": "ES2019"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
